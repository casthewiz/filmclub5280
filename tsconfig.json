{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "esModuleInterop": true,
    "lib": [
      "es5",
      "es6",
      "es2016.array.include",
      "dom"
    ],
    "noImplicitAny": false,
    "noEmit": false,
    "sourceMap": true,
    "outDir": "lib",
    "jsx": "preserve",
    "allowJs": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true
  },
  "include": [
    "components/**/*.ts",
    "components/**/*.tsx",
    "components/**/*.js",
    "components/**/*.jsx",
    "containers/**/*.ts",
    "containers/**/*.tsx",
    "containers/**/*.js",
    "containers/**/*.jsx"
  ],
  "exclude": [
    "css/**/*.scss"
  ]
}
